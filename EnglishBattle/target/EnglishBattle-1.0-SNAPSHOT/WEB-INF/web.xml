<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>inscriptionServlet</servlet-name>
        <servlet-class>com.mycompany.englishbattle.Servlet.inscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>connexionServlet</servlet-name>
        <servlet-class>com.mycompany.englishbattle.Servlet.connexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>questionServlet</servlet-name>
        <servlet-class>com.mycompany.englishbattle.Servlet.questionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controleReponseServlet</servlet-name>
        <servlet-class>com.mycompany.englishbattle.Servlet.controleReponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inscriptionServlet</servlet-name>
        <url-pattern>/inscriptionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>connexionServlet</servlet-name>
        <url-pattern>/connexionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/questionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controleReponseServlet</servlet-name>
        <url-pattern>/controleReponseServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
